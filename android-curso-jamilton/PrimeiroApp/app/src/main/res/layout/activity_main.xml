<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_escolha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha um nÃºmero de 0 a 10"
        android:textSize="24sp"
        android:layout_marginTop="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_jogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Jogar"
        app:layout_constraintEnd_toEndOf="@id/txt_escolha"
        app:layout_constraintStart_toStartOf="@id/txt_escolha"
        app:layout_constraintTop_toBottomOf="@id/txt_escolha" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="@id/btn_jogar"
        app:layout_constraintStart_toStartOf="@id/btn_jogar"
        app:layout_constraintTop_toBottomOf="@id/btn_jogar"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>